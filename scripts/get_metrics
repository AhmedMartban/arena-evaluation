#!/usr/bin/env python3

import argparse
import os 
from arena_evaluation.metrics import Metrics

if __name__ == "__main__":
    parser = argparse.ArgumentParser()
    parser.add_argument("--dir", "-d")
    parser.add_argument("--pedsim", "-p")
    arguments = parser.parse_args()

    data = Metrics(
        arguments.dir,
        **(dict(pedsim=arguments.pedsim) if "pedsim" in arguments else dict())
    ).data
    data.to_csv(os.path.join(arguments.dir, "metrics.csv"))
